<!DOCTYPE html>
<html>
  <head>
    <title>Pamela</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="ui top fixed menu">
   <h1 id="home"> Home </h1>
   <h1 id="about"> About Us </h1>
   <% if current_user %>
<h1> <%= link_to 'Sign out', destroy_user_session_path, method: :delete %> </h1>
<div id="main" class="ui vertical inverted left visible sidebar menu" style= "background-image: linear-gradient(to left top, #7b8ba1, #657791, #4f6482, #395172, #233f63);">
   
    <img id="adminimg"src="http://ubiatarplay.io/wp-content/uploads/2018/03/04_avatar_neutral.png">
 
  
   <a id="reload"class="item" href="/">

     Dashboard <i class="home icon"></i>
   </a>
   <a class="item" href="/instructors">
     Instructors <i class="user md icon"></i>
   </a>
   <a class="item" href="/students">
     Students <i class="users icon"></i>
   </a>
   <a class="item" href="/cohorts">
     Cohorts <i class="calendar alternate icon"></i>
   </a>
   <a class="item" href="/courses">
     Courses <i class="graduation cap icon"></i></i>
   </a>
  
 </div>
 
 <div class="pusher">
   <!-- Site content !-->
   
   </div>
<%else %>

   <div class="ui compact menu">
  <div class="ui simple dropdown item">
    Sign in
    <i class="dropdown icon"></i>
    <div class="menu">
      <div class="item"><%= link_to 'Student', new_user_session_path %></div>
      <div class="item"><%= link_to 'Instructor', new_user_session_path %></div>
      <div class="item"><%= link_to 'Admin', new_user_session_path %></div>
    </div>
  </div>
  <%end%>
</div>

</div>
  

    <%= yield %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  </body>
</html>
