


  <div class="pusher">
  <div id ="showinstructor">
<%if current_user && current_user.student %>
    <h1> <%= @instructor.name %> </h1>
    <h1> <%= @instructor.last_name %> </h1>
    <h1> <%= @instructor.email %> </h1>
<%else %>
<% @instructor.each do |inst| %>
    <div id="instructor-<%=inst.id%>">
    <h1> <%= inst.name %></h1>
    <h1> <%= inst.email %> </h1>
    
    <h4><%= link_to 'Show', inst %></h4>
    <% if current_user && current_user.admin %>
    <%= link_to 'Edit', edit_instructor_path(inst)%> 
    <%= link_to 'Destroy', instructor_path(inst), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %>
    <%end%>
        <%end%>
   
   <%end%>
   </div>
   </div>
